---
import MainLayouts from '../layouts/MainLayouts.astro';
import { readFileSync, writeFileSync, existsSync, readdirSync } from 'fs';
import { join } from 'path';

interface BlogPost {
  title: string;
  description: string;
  pubDate: string;
  updatedDate?: string;
  author: string;
  image?: string;
  tags?: string[];
  content: string;
  slug: string;
}

interface CompleteBlogPost extends BlogPost {
  updatedDate?: string;
  image?: string;
  tags?: string[];
}

// L√§s alla blogginl√§gg
const blogDir = join(process.cwd(), 'src/content/blog');
let posts: BlogPost[] = [];

if (existsSync(blogDir)) {
  const files = readdirSync(blogDir).filter(f => f.endsWith('.md'));
  
  posts = files
    .map(file => {
      const filePath = join(blogDir, file);
      const content = readFileSync(filePath, 'utf-8');
      
      // Parsa frontmatter
      const match = content.match(/^---\n([\s\S]*?)\n---\n([\s\S]*)$/);
      if (!match) return null;
      
      const [, frontmatter, body] = match;
      const metadata: Record<string, string> = {};
      
      frontmatter.split('\n').forEach(line => {
        const [key, ...valueParts] = line.split(':');
        const value = valueParts.join(':').trim();
        
        if (key && value) {
          metadata[key.trim()] = value.replace(/^["']|["']$/g, '');
        }
      });
      
      return {
        title: metadata.title || 'Utan titel',
        description: metadata.description || '',
        pubDate: metadata.pubDate || new Date().toISOString(),
        updatedDate: metadata.updatedDate,
        author: metadata.author || 'LORA Admin',
        image: metadata.image,
        tags: metadata.tags ? metadata.tags.split(',').map(t => t.trim()) : [],
        content: body.trim(),
        slug: file.replace('.md', ''),
      } as BlogPost;
    })
    .filter((post): post is BlogPost => post !== null)
    .sort((a, b) => new Date(b.pubDate).getTime() - new Date(a.pubDate).getTime());
}
---

<MainLayouts title="Blog | LORA">
