        <button 
          type="button"
          id="open-admin-btn"
          class="bg-green-600 text-white px-6 py-2 rounded-lg font-bold hover:bg-green-700 transition-colors"
        >
          √ñppna fullst√§ndig CMS
        </button>
      </div>
    </form>
  </div>

  <!-- Blog Posts Grid -->
  <div class="grid grid-cols-1 gap-6">
    {posts.length > 0 ? (
      posts.map((post) => (
        <article class="bg-white border border-gray-200 rounded-2xl p-6 shadow-sm hover:shadow-md transition-all">
          <div class="flex justify-between items-start mb-3">
            <div>
              <h2 class="text-2xl font-bold text-gray-900 mb-2">{post.title}</h2>
              <p class="text-gray-600 text-sm">{post.description}</p>
            </div>
            {post.image && (
              <img src={post.image} alt={post.title} class="w-24 h-24 object-cover rounded-lg" />
            )}
          </div>

          <div class="space-y-3 border-t border-gray-100 pt-4">
            <div class="prose prose-sm max-w-none text-gray-700">
              {post.content.split('\n').slice(0, 3).join('\n')}
              {post.content.split('\n').length > 3 && '...'}
            </div>

            <div class="flex justify-between items-center text-xs text-gray-500">
              <div class="flex gap-2">
                <span>üìÖ {new Date(post.pubDate).toLocaleDateString('sv-SE')}</span>
                <span>‚úçÔ∏è {post.author}</span>
              </div>
              
              {post.tags && post.tags.length > 0 && (
                <div class="flex gap-1">
                  {post.tags.map(tag => (
                    <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded-full text-xs">#{tag}</span>
                  ))}
                </div>
              )}
            </div>
          </div>
        </article>
      ))
    ) : (
      <div class="text-center py-12">
        <p class="text-gray-500 mb-4">Inga blogginl√§gg √§n. Publicera ditt f√∂rsta meddelande!</p>
      </div>
    )}
  </div>
</MainLayouts>

<script>
  // Snabbmeddelande-form
  const form = document.getElementById('quick-post-form') as HTMLFormElement;
  const titleInput = document.getElementById('post-title') as HTMLInputElement;
  const contentInput = document.getElementById('post-content') as HTMLTextAreaElement;
  const authorInput = document.getElementById('post-author') as HTMLInputElement;
  const openAdminBtn = document.getElementById('open-admin-btn') as HTMLButtonElement;

  if (form) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();

      const post = {
        title: titleInput.value,
        description: contentInput.value.split('\n')[0].substring(0, 100),
        content: contentInput.value,
        author: authorInput.value || 'LORA Admin',
        pubDate: new Date().toISOString(),
        tags: ['snabbnyheter'],
        slug: `quick-post-${Date.now()}`,
      };

      // Spara till localStorage f√∂r att visa omedelbar feedback
      const savedPosts = JSON.parse(localStorage.getItem('blog-quick-posts') || '[]');
      savedPosts.unshift(post);
      localStorage.setItem('blog-quick-posts', JSON.stringify(savedPosts));

      // Visa bekr√§ftelse
      alert('‚úÖ Meddelande sparad lokalt! Det kommer synkroniseras vid n√§sta uppdatering.');
      
      // Rensa formul√§r
      form.reset();
      authorInput.value = 'LORA Admin';

      // Ladda om sidan f√∂r att visa det nya inl√§gget
      location.reload();
    });
  }

  // L√§nk till CMS admin
  if (openAdminBtn) {
    openAdminBtn.addEventListener('click', () => {
      window.location.href = '/LORA.github.io/admin/';
    });
  }

  // Ladda snabbmeddelanden fr√•n localStorage om de finns
  const savedPosts = JSON.parse(localStorage.getItem('blog-quick-posts') || '[]');
  if (savedPosts.length > 0) {
    console.log('üíæ Snabbmeddelanden sparade lokalt:', savedPosts);
  }
</script>
